        copy var:sys_sched_process_rm_fd_counter to REG_B
        write " " to REG_C
        write "" to REG_D
        write OP_REPLACE_COLUMN to REG_OP
        cpu_exec

        copy REG_RES to REG_A
        copy PROGRAM_COUNTER to var:sys_return
        jump label:sys_remove_unneeded_spaces

