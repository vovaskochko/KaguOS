    copy var:sys_cur_pcb_ptr to REG_B
    write OP_CMP_EQ to REG_OP
    cpu_exec
    jump_if label:sys_sched_kill_pid_current

    copy REG_RES to REG_A
    copy PROGRAM_COUNTER to var:sys_return
    jump label:sys_sched_clean_pcb
